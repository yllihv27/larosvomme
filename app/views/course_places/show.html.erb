<div style="padding:50px">

	<p id="notice"><%= notice %></p>

	<%= @course_place.name %><br><br>

	<table class="table">
	  <thead style="background: #ff3f00;">
	    <tr class="course_place_table_top">
	      <th><h2>KLOKKESLETT</h2></th>
	      <th><h2>KURS</h2></th>
	      <th><h2>NIVÃ…</h2></th>
	      <th colspan="3"></th>
	    </tr>
	  </thead>
	  <tbody>
	    <% @courses.each do |course| %>
	      <tr class="course_place_table">
	        <td><%= course.time_from.strftime("%H:%M") if course.time_from %> - <%= course.time_to.strftime("%H:%M") if course.time_to %></td>
	        <td><%= course.course_category.name if course.course_category %></td>
	        <td><%= course.course_niveau.name if course.course_niveau %></td>
	      </tr>
	    <% end %>
	  </tbody>
	</table>
	<center>
		<div class="padding main-button" style="width: 300px">
			<%= link_to "KLIKK HER OG VELG KURS I NETTBUTIKKEN", courses_path, class: 'padding' %>
		</div>
	</center>

	<p>
	  <strong>Name:</strong>
	  <%= @course_place.name %>
	</p>

	<p>
	  <strong>Address:</strong>
	  <%= @course_place.address %>
	</p>

	<p>
	  <strong>Phone:</strong>
	  <%= @course_place.phone %>
	</p>

	<p>
	  <strong>Description:</strong>
	  <%= @course_place.description %>
	</p>

	<%= link_to 'Edit', edit_course_place_path(@course_place) %> |
	<%= link_to 'Back', course_places_path %>

</div>