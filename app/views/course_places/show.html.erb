<div style="padding:50px">

	<p id="notice"><%= notice %></p>

	<%= @course_place.name %>
	<br>

	<%= @course_place.address if @course_place.address %> <%= "#tlf: {@course_place.phone}" if @course_place.phone %>

	<br>

	<table class="table">
	  <thead style="background: #ff3f00;">
	    <tr class="course_place_table_top">
	      <th><h2>KLOKKESLETT</h2></th>
	      <th><h2>KURS</h2></th>
	      <th><h2>NIVÃ…</h2></th>
	      <th colspan="3"></th>
	    </tr>
	  </thead>
	  <tbody>
	    <% @courses.each do |course| %>
	      <tr class="course_place_table">
	        <td><%= course.time_from.strftime("%H:%M") if course.time_from %> - <%= course.time_to.strftime("%H:%M") if course.time_to %></td>
