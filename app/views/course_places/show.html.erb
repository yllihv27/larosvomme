	</center>

	<div style="color: #a9a9a9;font-size: 16px">


		<%= link_to 'Alle steder', courses_path %> | 
		<%= link_to 'Tilbake', root_path %> | <%= link_to "Rediger kurs sted", edit_course_place_path(@course_place) %>
