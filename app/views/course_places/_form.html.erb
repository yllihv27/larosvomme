<h2 style="padding-top;padding-left: 50px;">Opprett kurs sted</h2>

<div class="page-card">
<%= form_with(model: course_place, local: true) do |form| %>
  <% if course_place.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(course_place.errors.count, "error") %> prohibited this course_place from being saved:</h2>

      <ul>
      <% course_place.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>


  <div class="field">
    <%= form.label :by %>
    <%= form.select :city_id, City.all.map { |u| ["#{u.name}", u.id] }, { include_blank: true, prompt: 'Velg by' }, { class: 'chosen-select' } %>
    <%= link_to "Legg til flere byer", new_city_path, target: :_blank, class: 'blue-button', style: 'float:right' %>
  </div><br>

  <div class="field">
    <%= form.label :kurs_sted_navn %><br>
    <%= form.text_field :name %><br><br>
  </div>

  <div class="field">
    <%= form.label :adresse %><br>
    <%= form.text_field :address %><br><br>
  </div>

  <div class="field">
    <%= form.label :telefon %><br>
    <%= form.text_field :phone %><br><br>
  </div>

  <div class="field">
    <%= form.label :kort_beskrivelse %> (valgfri)<br>
    <%= form.text_area :description %>
  </div><br>

  <div class="actions">
    <%= form.submit "Legg til kurs sted", class: 'buy-button' %>
  </div>
<% end %>

</div>