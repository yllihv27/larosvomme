<div class="wrapper">
    <!-- Sidebar Holder -->
    <% if coach_signed_in? %>
        <nav id="sidebar">
            <div class="sidebar-header">
                <%= link_to (image_tag '/logo.png'), root_path %>
            </div>

            <ul class="list-unstyled components">
                <p>Hi <%= current_coach.name %></p>
                <li class="active">
                    <a href="#homeSubmenu" data-toggle="collapse" aria-expanded="false">Home</a>
                    <ul class="collapse list-unstyled" id="homeSubmenu">
                        <li><a href="#">Home 1</a></li>
                        <li><a href="#">Home 2</a></li>
                        <li><a href="#">Home 3</a></li>
                    </ul>
                </li>
                <li>
                    <a href="#">About</a>
                    <a href="#pageSubmenu" data-toggle="collapse" aria-expanded="false">Pages</a>
                    <ul class="collapse list-unstyled" id="pageSubmenu">
                        <li><a href="#">Page 1</a></li>
                        <li><a href="#">Page 2</a></li>
                        <li><a href="#">Page 3</a></li>
                    </ul>
                </li>
                <li>
                    <a href="#">Portfolio</a>
                </li>
                <li>
                    <a href="#">Contact</a>
                </li>
            </ul>

        </nav>
    <% end %>

    <!-- Page Content Holder -->
    <div id="content">

        <nav class="navbar navbar-default">
          <div class="container-fluid" style="padding: 10px">
            
            <% if coach_signed_in? %>
                <div class="navbar-header">
                    <button type="button" id="sidebarCollapse" class="btn btn-info navbar-btn">
                        <i class="glyphicon glyphicon-align-left"></i>
                    </button>
                </div>
            <% end %>

            <%= link_to (image_tag '/logo.png'), root_path if !coach_signed_in? %>

            <div style="float:right">
                <%= link_to "Coach login", new_coach_session_path, class: 'top-navbar' if !coach_signed_in? and !member_signed_in? %>
              <%= link_to "Konto", edit_coach_registration_path, class: 'top-navbar' if coach_signed_in? %>
              <%= link_to "Sign out", destroy_coach_session_path, method: :delete, class: 'top-navbar' if coach_signed_in? %>
                <br>
              <%= link_to "Kurs", courses_path %>
              <%= link_to "Logg inn", new_member_registration_path if !member_signed_in? and !coach_signed_in? %>
              <%= link_to "Konto", edit_member_registration_path if member_signed_in? %>
              <%= link_to "Logg utt", destroy_member_session_path, method: :delete if member_signed_in? %>
            </div>
              
          </div>
        </nav>


        <div class="container">
          <%= yield %>
        </div>
    </div>
</div>





<!-- jQuery CDN -->
 <script src="https://code.jquery.com/jquery-1.12.0.min.js"></script>
 <!-- Bootstrap Js CDN -->
 <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>

 <script type="text/javascript">
     $(document).ready(function () {
         $('#sidebarCollapse').on('click', function () {
             $('#sidebar').toggleClass('active');
         });
     });
 </script>