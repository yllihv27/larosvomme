<p id="notice"><%= notice %></p>

<h1>Contact People</h1>

<table>
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Relasjon</th>
      <th>Member</th>
      <th>Child</th>
      <th>Course</th>
      <th>Order</th>
      <th>Participation</th>
      <th>Phone</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @contact_people.each do |contact_person| %>
      <tr>
        <td><%= contact_person.first_name %></td>
        <td><%= contact_person.last_name %></td>
        <td><%= contact_person.relation %></td>
        <td><%= contact_person.member_id %></td>
        <td><%= contact_person.phone if contact_person.phone %></td>
        <td><%= link_to 'Show', contact_person %></td>
        <td><%= link_to 'Edit', edit_contact_person_path(contact_person) %></td>
        <td><%= link_to 'Destroy', contact_person, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

