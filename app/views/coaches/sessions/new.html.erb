<div id="notice"><%= notice %></div>
<center>
<div class="padding" style="background: #191919;margin:50px;border-radius: 5px;border:1px solid #323232">

<h2>Logg inn</h2>

  <br>
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: 'Email' %>
  </div>

  <br>

  <div class="field">
    <%= f.password_field :password, autocomplete: "current-password", placeholder: 'Passord' %>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :husk_meg %>
    </div>
  <% end -%>

  <div class="actions">
    <%= f.submit "Logg inn", class: 'buy-button' %>
  </div>
<% end %>

<%= render "coaches/shared/links" %>

</div>
</center>