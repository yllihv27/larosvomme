<div style="padding:50px">

  <h1>Dine kurs</h1>

  <table class="table">
    <thead>
      <tr>
        <th>Kurs</th>
        <th>Navn</th>
        <th>Sub total</th>
        <th>Dato</th>
        <th>Åpen</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% @orders.each do |order| %>
        <tr>
          <td>#<%= order.id %></td>
          <td><%= order.first_name %> <%= order.last_name %></td>
          <td><%= number_to_currency order.sub_total %></td>
          <td><%= I18n.localize(order.created_at, format: '%A / %b %d / %Y').split.map(&:capitalize).join(' ') %></td>
          <td><%= link_to "Åpen", order_path(order), class: 'blue-button' %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <% if @orders.count < 1 %>
  Finn ditt første kurs <%= link_to "her", kurs_path, style: 'color: #ff3f00 !important' %>.
  <% end %>
</div>