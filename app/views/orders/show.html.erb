<div class="transparent">

	<p id="notice"><%= notice.html_safe if notice %></p>

	<div style="padding: 50px">

	<div class="row">
		<div class="col-xs-6">

			<p>
			  Ordre #<%= @order.id %>
			</p>

			<p>
			  <strong>Kunde:</strong>
			  <%= @order.first_name %> <%= @order.last_name %> (<%= @order.email %>)
			</p>

			<p>
			  <strong>Sub total:</strong>
			  <%= @order.sub_total %>
			</p>
		</div>
		<div class="col-xs-6">
			<table class="table">
				<thead>
					<tr>
						<td>Kurs</td>
						<td>Pris</td>
						<td>Kvantitet</td>
					</tr>
				</thead>
				<tbody>
					<% @order_items.each do |item| %>
						<tr>
							<td style="padding: 10px"><%= item.course.course_category.name if item.course.course_category %> <%= item.course.course_niveau.name if item.course.course_niveau %> <%= item.course.course_place.name if item.course.course_place %><br></td>
							<td><%= number_to_currency item.price %></td>
							<td><%= item.quantity %></td>
						</tr>
					<% end %>
				</tbody>
				<tfoot>
					<td colspan="4" align="right">
						<strong>Sub total:</strong> <%= number_to_currency @order.sub_total %>
					</td>
				</tfoot>
			</table>
		</div>
	</div>

	<%= link_to 'Tilbake til alle ordrer', orders_path %>

	</div>
</div>