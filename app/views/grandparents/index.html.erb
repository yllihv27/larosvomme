<p id="notice"><%= notice %></p>

<h1>Grandparents</h1>

<table>
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Member</th>
      <th>Child</th>
      <th>Course</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @grandparents.each do |grandparent| %>
      <tr>
        <td><%= grandparent.first_name %></td>
        <td><%= grandparent.last_name %></td>
        <td><%= grandparent.member_id %></td>
        <td><%= grandparent.child_id %></td>
        <td><%= grandparent.course_id %></td>
        <td><%= link_to 'Show', grandparent %></td>
        <td><%= link_to 'Edit', edit_grandparent_path(grandparent) %></td>
        <td><%= link_to 'Destroy', grandparent, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

