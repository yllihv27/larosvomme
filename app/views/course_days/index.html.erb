<p id="notice"><%= notice %></p>

<h1>Course Days</h1>

<table>
  <thead>
    <tr>
      <th>Day</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @course_days.each do |course_day| %>
      <tr>
        <td><%= course_day.day %></td>
        <td><%= link_to 'Show', course_day %></td>
        <td><%= link_to 'Edit', edit_course_day_path(course_day) %></td>
        <td><%= link_to 'Destroy', course_day, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Course Day', new_course_day_path %>
