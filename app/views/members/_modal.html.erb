<center style="background: rgba(255, 255, 255, .9);margin:10vw;padding: 20px;border-radius:10px">

<h2 style="color: #1c1c1c">Opprett gratis konto</h2>
<span style="color: #616161 !important;"> Eller <%= link_to 'logg inn', new_member_session_path, style: 'color: #616161 !important' %>.</span>
<br><br>
<%= form_for(@member) do |f| %>
  <div class="field" style="color: #1c1c1c">
    <%= f.label :profil_bilde %><br />
    <%= f.file_field :profile_pic %>
  </div>

  <br>

  <div class="field">
    <%= f.text_field :first_name, autofocus: true, placeholder: "Fornavn" %>
  </div>
  
  <br>
  <div class="field">
    <%= f.text_field :last_name, placeholder: "Efternavn" %>
  </div>

  <br>
  
  <div class="field" style="color: #1c1c1c">
    <%= f.email_field :email, autofocus: true, placeholder: "email" %>
  </div>
  
  <br>
  
  <div class="field" style="color: #1c1c1c">
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password", placeholder: "Passord" %>
  </div>

  <br>

  <div class="field" style="color: #1c1c1c">
    <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "Passord bekreftelse" %>
  </div>
  
  <br>

  <div class="actions">
    <%= f.submit "Opprett konto", class: 'btn btn-primary' %>
  </div>
<% end %>


</center>