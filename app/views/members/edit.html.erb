<div class="edit-member">
<h2>Rediger deltaker </h2> <%= @member.first_name %> <%= @member.last_name %> (<%= @member.id %>)
<br><br>
<div class="row">
  <div class="col-md-6">
    <%= form_for(@member, html: { method: :put }) do |f| %>

      <div class="field">
        <%= f.label :fornavn %><br />
        <%= f.text_field :first_name, placeholder: "Fornavn" %>
      </div>
      
      <br>

      <div class="field">
        <%= f.label :etternavn %><br />
        <%= f.text_field :last_name, placeholder: "Etternavn" %>
      </div>

      <br>

      <div class="field">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>

      <br>


      <div class="field">
        <%= f.label :passord %> <i>(la være tom hvis du ikke vil endre den)</i><br />
        <%= f.password_field :password, autocomplete: "new-password" %>
        <% if @minimum_password_length %>
          <br />
          <em><%= @minimum_password_length %> tegn minimum</em>
        <% end %>
      </div>

      <br>

      <div class="field">
        <%= f.label :passord_bekreftelse %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
      </div>

      <br>

      <div class="field">
        <%= f.label :nåværende_passord %> <i>(Vi trenger ditt nåværende passord for å bekrefte endringene dine)</i><br />
        <%= f.password_field :current_password, autocomplete: "current-password" %>
      </div>

      <br>

        <%= f.submit "Oppdater deltaker", class: 'buy-button', style: 'float: right' %>
    <% end %>
  </div>
  <div class="col-md-6" style="font-size: 14px;background: #f3f2f2;padding: 20px;border-radius: 5px;">
    <div class="row"><div class="col-md-6"><strong style="font-size: 18px;">Registrerte kurs</strong></div><div class="col-md-6" style="float: right"><div class="danger"><%= link_to 'Tilføj deltakelse', new_participation_path, class: 'blue-button' %></div></div></div>
    <br><br>

    <% @participations.each do |p| %>
      <div class="hover-bg">
        <%= link_to p.course.course_niveau.name, participation_path(p) if p.course.course_niveau %> <%= link_to p.course.course_category.name, participation_path(p) if p.course.course_category %> <%= link_to p.course.course_place.name, participation_path(p) if p.course.course_place %> <%= link_to p.course.day.strftime('%A | %b %d'), participation_path(p) if p.course.day %><br>
        <div class="danger" style="float:right">
          <%= link_to "Slett deltakelse", participation_path(p),
              data: {:confirm => 'Er du sikker?'}, method: :delete, class: 'btn-danger-small' %>
        </div><br>
      </div>
      <br>
    <% end %>
  </div>
</div>

<hr>

<div class="danger">
  <%= link_to "Slett deltaker", member_path(@member),
            data: {:confirm => 'Er du sikker?'}, method: :delete, class: 'btn btn-danger' %>
</div>

<%= link_to "← Tilbake", :back %>

</div>