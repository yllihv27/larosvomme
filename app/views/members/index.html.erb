<% @courses.each do |c| %>
<% if c.members %>
  <div style="background: #fff; padding: 20px;margin-bottom: 20px">
    <div style="font-size: 14px;font-weight: 500"><%= c.course_day %> <%= c.course_category.name %> <%= c.course_niveau.name %> <%= c.course_place.name %></div>
    <table class="table table-hover">
      <tbody>
        <% @members.each do |member| %>
          <% if member.course_id == c.id %>
            <tr style="color:#1c1c1c !important">
              <td style="padding-right: 20px"><%= link_to member.first_name, edit_member_path(member) %> <%= link_to member.last_name, edit_member_path(member) %></td>   
              <td><%= link_to member.email, edit_member_path(member) %></td>
            </tr>
          <% end %>
        <% end %>
      </tbody>
    </table>
  </div>


<% end %>
<% end %>


<div class="row">
  <% @members.each do |member| %>
    <%= link_to edit_member_registration_path(member) do %>
      <div class="col-md-4 col-sm-6">
        <div class="content">
          <div class="content-overlay"></div>

          <div class="card content-image">

            <%# if member.image? %>
            <%#= link_to (image_tag (member.image.url(:profile)), class: 'course-image'), course_path(course) if course.course_image %>
            <%# end %>
            <div class="card-body">
              <div class="row" style="margin: 0">
                  <h4 class="card-title row"><%= member.first_name if member.first_name %> <%= member.last_name if member.last_name %></h4>
              </div>
            </div>
              <div class="card-text"> <%= member.email %></div>
            <ul class="list-group list-group-flush">
              <li class="list-group-item"><span class="text-muted"><div class="card-text"> <%= member.email %></div></li>
              <%#li class="list-group-item"><span class="text-muted">Kurs:</span> <%= member.kurs.name if member.kurs %></li>
            </ul>
            <div class="row" style="margin: 0;text-align:center">
              <%= link_to 'KjÃ¸p', root_path, class: 'col-md-6 col-sm-6 col-xs-6 card-btn-1' %>
              <%= link_to 'Info', member_path(member), class: 'col-md-6 col-sm-6 col-xs-6 card-btn-2' %>
            </div>
            <%= link_to edit_member_registration_path(member) do %>
              <div class="content-details fadeIn-top">
                <h3>Edit deltaker</h3>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
  <% end %>
</div>
