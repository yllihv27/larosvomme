<div class="row">
  <div class="col-md-6">
    <h1>Kurs</h1>
  </div>
  <div class="col-md-6">
    <%= link_to "Nytt kurs", new_course_path, class: 'btn btn-primary', style: 'float:right;color:#fff !important' %>
  </div>
</div>
<div class="row">
  <% @courses.each do |course| %>
    <%= link_to edit_course_path(course) do %>
      <div class="col-xs-6 col-sm-3" style="padding:5px">
        <div class="content">
          <div class="content-overlay"></div>

          <% if course.day.future? %>

            <div class="card content-image" style="background: #fff">
              <%= link_to (image_tag (course.course_image.url(:product)), class: 'course-image'), edit_course_path(course) if course.course_image %>
              <div class="card-body">
                <div class="row" style="margin: 0">
                  <h4 class="card-title row"><%= course.course_category.name %> <% if course.age_from and course.age_to %><%= course.age_from %>-<%= course.age_to %> år<% end %> <%= course.course_niveau.name if course.course_niveau %> | <%= course.course_place.name if course.course_place %></h4>
                </div>
              </div>
              <hr style="margin: 3px;border:1px solid #f3f2f2">
              <div class="card-text" style="background: #fff"><%= number_to_currency(course.price, :unit => "NOK") if course.price %></div>
              <hr style="margin: 3px;border:1px solid #f3f2f2">
              <div style="font-size: 14px;padding:5px">
                <span class="text-muted" style="padding: 3px">Tid:</span> <%= course.time_from.strftime("%H:%M") if course.time_from %>-<%= course.time_to.strftime("%H:%M") if course.time_to %>
              <hr style="margin: 3px;border:1px solid #f3f2f2">
                <span class="text-muted" style="padding: 3px">Coach:</span> <%= course.coach.name if course.coach %>
              </div>
            </div>
            <%= link_to edit_course_path(course) do %>
              <div class="content-details fadeIn-top">
                <h3>Rediger kurs</h3>
              </div>
            <% end %>
          <% end %>
          
          <% if course.day.past? %>
            <div style="opacity: 0.4">


              <div class="card content-image" style="background: #fff">
                <%= link_to (image_tag (course.course_image.url(:product)), class: 'course-image'), edit_course_path(course) if course.course_image %>
                <div class="card-body">
                  <div class="row" style="margin: 0">
                    <h4 class="card-title row"><%= course.course_category.name %> <% if course.age_from and course.age_to %><%= course.age_from %>-<%= course.age_to %> år<% end %> <%= course.course_niveau.name if course.course_niveau %> | <%= course.course_place.name if course.course_place %></h4>
                  </div>
                </div>
              <hr style="margin: 3px;border:1px solid #f3f2f2">
                <div class="card-text" style="background: #fff"> <%= number_to_currency(course.price, :unit => "NOK") if course.price %></div>
                <hr style="margin: 3px;border:1px solid #f3f2f2">
                <div style="font-size: 14px;padding:5px">
                  <span class="text-muted">Tid:</span> <%= course.time_from.strftime("%H:%M") if course.time_from %>-<%= course.time_to.strftime("%H:%M") if course.time_to %>
                  <hr style="margin: 3px;border:1px solid #f3f2f2">
                  <span class="text-muted" style="padding: 3px">Coach:</span> <%= course.coach.name if course.coach %>
                </div>
              </div>
              <%= link_to edit_course_path(course) do %>
                <div class="content-details fadeIn-top">
                  <h3>Rediger kurs</h3>
                </div>
              <% end %>

            </div>
          <% end %>

        </div>
        <hr>
      </div>
    <% end %>
  <% end %>
</div>
