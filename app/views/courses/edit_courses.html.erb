                <div class="card-text" style="background: #fff;font-size:16px;"><%= number_to_currency(course.price, :unit => "NOK") if course.price %></div>
                <hr style="margin: 3px;border:1px solid #f3f2f2">
                <div style="font-size: 14px;padding:5px">
                  <span class="text-muted" style="padding: 3px">Dato:</span> <%= course.course_day if course.day %>
                  <hr style="margin: 3px;border:1px solid #f3f2f2">
                  <span class="text-muted" style="padding: 3px">Tid:</span> <%= course.time_from.strftime("%H:%M") if course.time_from %>-<%= course.time_to.strftime("%H:%M") if course.time_to %>
                  <hr style="margin: 3px;border:1px solid #f3f2f2">
                  <span class="text-muted" style="padding: 3px">Trener:</span> <%= course.coach.name if course.coach %>
                </div>
              </div>
              <%= link_to edit_course_path(course) do %>
                <div class="content-details fadeIn-top">
                  <h3>Rediger kurs</h3>
                </div>
              <% end %>
            </div>
            <hr>
          </div>
        <% end %>
      </div>
    <% end %>
  <% end %>
</div>
