<h2 style="padding-top;padding-left: 50px;">Rediger/Send emails</h2>
<div class="page-card">
    <br>
  <%= form_with(model: @email, local: true) do |form| %>
    <% if @email.errors.any? %>
      <div id="error_explanation">
        <h2>En feil forbÃ¸d at denne e-posten ble lagret:</h2>

        <ul>
        <% @email.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <div class="actions" style="float:right">
      <%= form.submit "Send email til hold nu", class: 'buy-button' %>
    </div>
Email til hold: <h3><%= @email.course.course_category.name %> <%= @email.course.course_place.name %> <br><%= @email.course.course_day %> </h3>
<hr>
    <div class="field">
      <%= form.label :emne %><br>
      <%= form.text_field :subject %>
    </div><br>

    <div class="field">
      <%= form.label :innhold %><br>
      <%= form.cktext_area :content, ckeditor: { language: 'nb'} %>
    </div><br>

    <div class="field">
      <%= form.label :kurs %><br>
      <%= form.select :course_id, Course.all.map { |u| ["#{u.course_category.name}, #{u.course_place.name}, #{u.day.strftime('%A | %b %d')}", u.id] }, { include_blank: true }, { class: 'chosen-select' } %>
    </div><br>

    <%= f.hidden_field :status, value: 'single' %>

    <div class="actions">
      <%= form.submit "Send email nu", class: 'buy-button' %>
    </div>
  <% end %>
</div>